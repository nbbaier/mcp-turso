{
   "extends": "@total-typescript/tsconfig/tsc/no-dom/library",
   "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": false,
      "declaration": false,
      "moduleResolution": "bundler",
      "module": "ESNext",
      "resolveJsonModule": true
   },
   "exclude": ["node_modules", "dist"],
   "include": ["src/**/*"]
}
